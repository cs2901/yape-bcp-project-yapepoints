<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/wood"
    android:orientation="vertical"
    tools:context="com.example.yapecupones.ProfileActivity">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        app:cardCornerRadius="5dp"
        android:background="@drawable/wood"
        app:cardElevation="20dp"
        android:layout_margin="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_gravity="center"
                android:layout_marginStart="5dp"
                android:layout_marginTop="38dp"
                android:layout_marginEnd="5dp"
                android:text="title"
                android:textAlignment="center"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />

            <TextView
                android:id="@+id/business_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title"
                android:layout_gravity="center"
                android:layout_marginStart="5dp"
                android:layout_marginTop="9dp"
                android:layout_marginEnd="5dp"
                android:text="business"
                android:textAlignment="center"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />

            <ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/business_name"
                android:layout_marginStart="5dp"
                android:layout_marginTop="71dp"
                android:layout_marginEnd="5dp"
                android:text="image" />

            <TextView
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/business_name"
                android:layout_gravity="center"
                android:layout_marginStart="5dp"
                android:layout_marginTop="316dp"
                android:layout_marginEnd="5dp"
                android:paddingLeft="10dp"
                android:text="description"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />

            <TextView
                android:id="@+id/cost"
                android:layout_width="348dp"
                android:layout_height="35dp"
                android:layout_below="@+id/business_name"
                android:layout_alignBottom="@+id/description"
                android:layout_gravity="center"
                android:layout_marginStart="5dp"
                android:layout_marginTop="245dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="67dp"
                android:textAlignment="center"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />

            <TextView
                android:id="@+id/business_region"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_gravity="center"
                android:layout_marginStart="5dp"
                android:layout_marginTop="503dp"
                android:layout_marginEnd="3dp"
                android:text="business"
                android:textAlignment="center"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />

            <ImageView
                android:id="@+id/business_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="4dp"
                android:layout_marginTop="599dp"
                android:onClick="goToURL"
                android:src="@drawable/outline_place_black_18dp" />


        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>